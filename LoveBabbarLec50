  // Que - Check LL is palindrome or not 
  

  // APPROACH 1 - hum pahle to ek array bananyenge jisme  hum linked list ke sare element copy kr lenge fir hum array me palindrome chek krne 
  // wali algo laga ake solve kr lenge


  class Solution {
    private:
    bool checkpalindrome(vector<int> arr){
        int n = arr.size();
        int s=0;
        int e = n-1;
        while(s<=e){
            if(arr[s] != arr[e]){
                return 0;
            }
            s++;
            e--;
        }
        return 1;
    }

public:
    bool isPalindrome(ListNode* head) {
        vector<int> arr;
        ListNode* temp = head;
        while(temp != NULL){
            arr.push_back(temp -> val);
            temp = temp ->next;
        }
        return checkpalindrome(arr);
    }
};